<div id="content" class="col col1">
  <h2 class="border">User profile</h2>
  <div class="entry">
      <div class="profile-title-generic">
        <%=current_user.user_class%>
      </div>
      <p>
        <img src="/images/user-icon.png" class="alignright" alt="" />
          ID:<%=current_user.id%>
        <br />
          name:<%=current_user.username%>
        <br />
          Email:<%=current_user.email%>
        <br />
          User class:<%=current_user.user_class%>
        <br />
        <br />
              <%= link_to "Edit", edit_user_path(current_user)%> |
              <%= link_to "Change Password", change_password_path %>
      </p>

  </div>
</div>