<h2>Project Details</h2>
<div class="content_phase">
  
  <div id="div_phase">
    <%= select(:deliverable, :phase, @phases,
      {:prompt   => "Select a phase"},
      {:onchange => "#{remote_function(:url  => {:action => "update_deliverable_partial"},
      :with => "'phase='+value")}"}) %>
  </div>
  <div class="box">
  <div class="tablebox-head">
    Deliverables
  </div>
  <div class="table">
  <table id="phase_partial" class="phase">
     <%= render :partial=>"deliverable_partial", :object=>@deliverables_of_phase %>
  </table>
  </div>
</div>

<div class="entry">
    <div class="profile-title-generic">
      <%=@project.status%>
    </div>
  <p>
    <b>Name:</b>
    <%=h @project.name %>
  </p>

  <p>
    <b>Lifecycle:</b>
    <%=h @project.lifecycle %>
  </p>

  <p>
    <b>Description:</b>
    <%=h @project.description %>
  </p>
  </div>

</div>
<%= link_to '&laquo; Homepage', :controller=>"projects" %> |
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Overview &raquo;', "/projects/overview" %><br/>
