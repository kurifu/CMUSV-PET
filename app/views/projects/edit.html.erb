<div class="box">
  <div class="box-head">
    Editing project
  </div>
  <div class="form">
<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class=>"fieldclass" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :class=>"areaclass" %>
  </p>

  <p>
    <%= f.label :status %> <br />
    <%= f.select(:status, %w(Active Archived)) %>
  </p>
  <p>
    <%= f.submit 'Update', :class=>"button" %>
  </p>
<% end %>
</div>
</div>

<%= link_to 'Details', :controller=>"deliverables", :project_id=>@project.id %> |
<% if current_user.user_class.casecmp("admin") %>
<%= link_to 'Back', admin_projects_path %>
<% else %>
<%= link_to 'Back', projects_path %>
<%end%>