<h1>Create a Project</h1>

<div class="content">
  
  <% form_for(@project) do |f| %>
    <%= f.error_messages %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <br/>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <br/>

    <%= f.label :lifecycle %>

    <%= select(:project, :lifecycle, @lifecycle_array, {:prompt => "Select a Lifecycle"}) %>

</div>

  <br/>
    <%= f.submit 'Create' %>
    <br/>
  <% end %>

  <%= link_to 'Back to Project Home', projects_path %>
