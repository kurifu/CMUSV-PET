<div class="content" id="new_del">

  <% form_for @deliverable, :url=>{:action=>"create"} do |f| %>
      <%= f.error_messages %>

      <table id="pet_table">
        <tr>
          <td><%= f.label :deliverable_type, "Select Deliverable Type" %></td>
          <td><%= select(:deliverable, :deliverable_type, @deliverable_types, {:prompt   => "Select a phase"}) %>
            <div id="ad_hoc_partial">
              <%= render :partial=>'ad_hoc' %>
            </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :name, "Deliverable Name" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :description, "Deliverable Description" %></td>
          <td><%= f.text_area :description %></td>
        </tr>
        <tr>
          <td><%= f.label :complexity %></td>
          <td><%= select(:deliverable, :complexity, @complexities, {:prompt   => "Select a complexity"}) %></td>
        </tr>
        <tr>
          <td><%= f.label :unit_measurement %></td>
          <td><%= f.text_field :unit_measurement %></td>
        </tr>
      </table>

      <div id="pet_calc_div">
        <%= render :partial=>'pet_calc' %>
      </div>
      
      <%= link_to "Historical Data", "#" %>
      <br/>
</div>
    <%= f.submit 'Create' %>

  <% end %>

