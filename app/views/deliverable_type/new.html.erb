<div class="content">

  <% form_for @deliverable, :url=>{:action=>"create"} do |f| %>
      <%= f.error_messages %>

      <%= f.label :deliverable_type, "Select Deliverable Type" %>
      <%= select(:deliverable, :deliverable_type, @deliverable_types,
      {:prompt   => "Select a phase"}) %>
      <br/>
      <%= f.label :name, "Deliverable Name" %>
      <%= f.text_field :name %>
      <br/>
      <%= f.label :description, "Deliverable Description" %>
      <br/>
      <%= f.text_area :description %>
      <br/>
      <%= f.label :complexity %>
      <%= select(:deliverable, :complexity, @complexities,
      {:prompt   => "Select a complexity"}) %>
      <br/>
      <%= f.label :unit_measurement %>
      <%= f.text_field :unit_measurement %>
      <br/>

      <div id="pet_calc">
        <%= f.label :estimated_size %>
        <%= select(:deliverable, :estimated_size, @estimated_sizes,
        {:prompt   => "Select a size"}) %>
        <br/>
        <%= f.label :production_rate %>
        <%= select(:deliverable, :production_rate, @production_rates,
        {:prompt   => "Select a production rate"}) %>
        <br/>
        <%= f.label :estimated_effort %>
        <%= select(:deliverable, :estimated_effort, @efforts,
        {:prompt   => "Select a estimated effort"}) %>
        
        <%= f.submit 'Calculate', :action => "process_calc_inputs" %>
      </div>
      
</div>

<%= link_to "Historical Data", "#" %>
      <br/>
      <%= f.submit 'Create' %>

  <% end %>